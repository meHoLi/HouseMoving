/* pages/discountCoupon/discountCoupon.wxss */
.body{
  display:flex;
  flex-direction:column;
  flex:1;
  width:100%;
}

.addDiscountCoupon{
  padding:10rpx 20rpx;
}
.changeBody{
  display: flex;
  padding: 20rpx 0;
}
.changeItem{
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 60rpx;
  margin-right: 20rpx;
}
.changeItem .title{
  margin-right: 10rpx;
}
.changeItem input{
  /* width:80rpx; */
  width: 180rpx;
  border:2rpx solid #c3c3c3;
  border-radius: 6rpx;
  padding: 0 10rpx;
}

.btn{
  display: flex;
  flex: 1;
  justify-content: flex-end;
}
.addBtn {
  height: 60rpx;
  line-height: 60rpx;
  background: #04be01;
  color: #fff;
  margin: 0;
}

.discountCoupon{
  padding:10rpx 20rpx;
  border-bottom:20rpx solid #eee;
}
.discountCoupon:nth-child(2){
  border-top:20rpx solid #eee;
}
.discountCouponBody{
  display: flex;
  flex-direction: column;
  padding: 20rpx 0;
}
.discountCouponItem{
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 60rpx;
  margin-right: 20rpx;
}
.discountCouponItem .title{
  margin-right: 10rpx;
}

.isUsed{
  display: flex;
  flex: 1;
  justify-content: flex-end;
  color: red;
}
