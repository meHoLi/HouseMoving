/**index.wxss**/
.radio-group{
  display: flex;
  flex: 1;
  border-bottom: 2rpx solid #666;
}
.radio-group .radio{
  display:flex;
  flex-grow:1;
  justify-content: center;
  font-size: 36rpx;
  padding: 25rpx 0;
  border-right: 2rpx solid #666;
}
.radio-group .radio:last-child{
  border-right: none;
}
.radio-group .radio radio .wx-radio-input {
  width:30rpx;
  height:30rpx;
}
.radio-group radio .wx-radio-input.wx-radio-input-checked{
  font-size:30rpx;
}

.carExplain{
  display: flex;
  flex-direction: row; 
  font-size: 30rpx;
  padding: 16rpx;
}
.carExplain-left{
  display: flex;
  flex-direction: column;
  flex: 1;
  width: 65%;
}
.carExplain-left-top, .carExplain-left-bottom{
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.btn{
  font-size: 36rpx;
}
.section{
  font-size:28rpx;
}

/*高德*/
.section input{
  border:1px solid #c3c3c3;
  border-radius: 3px;
  padding: 0 5px;
}
.text_box{
  margin: 10px 25px;
  border-bottom:1px solid #c3c3c3;
  padding-bottom:10px
}

/*  */
.liItem{
  display: flex;
  flex: 1;
  align-items: center;
  padding:10rpx;
}
.title{
  width:160rpx;
  display: flex;
  align-items: center;
  padding-right: 20rpx;
}
.title .iconfont{
  margin-right: 10rpx;
}

.mapSeach{
  display: flex;
  flex-flow: 1;
}
.row-wrap{
  display: flex;
  flex: 1;
  align-items: center;
  margin-left: 20rpx;
}
.row-wrap image{
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}
/* 还有途经点按钮 */
.wayToBtn{
  display:flex;
  align-items:center;
  width: 240rpx;
  height: 60rpx;
  font-size: 24rpx;
  background: #fff;
}
.icon-jiahao{
  margin-right: 10rpx;
}

.passingPlace .passingPlaceItem{
  display: flex;
  flex: 1;
  align-items:center;
  padding:10rpx;
}

.movingTime, .contacts, .phone, .personNum, .remark{
  display:flex;
  flex:1;
  align-items:center;
  padding:10rpx;
}

.movingTime input, .contacts input, .phone input, .personNum input, .remark input{
  width: 600rpx;
  border:1px solid #c3c3c3;
  border-radius: 3px;
  padding: 0 5px;
}

/* 订单备注信息 */
.remarkInfo{
  height:152rpx;
  font-size: 30rpx;
  text-indent: 28rpx;
  border: 1rpx solid gainsboro;
  padding-top: 30rpx;
  margin: 0 auto;
  overflow: hidden;   
  position: relative; 
}
.currentRemarkInfo{
  font-size: 28rpx;
  color: gray;
  position: absolute;
  right: 25rpx;
  bottom: 25rpx;
}
