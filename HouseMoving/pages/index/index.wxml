<!--index.wxml-->
<view class="container">
  <scroll-view scroll-y="true" enable-back-to-top="true">
    <view class="tabs">
      <radio-group class="radio-group" bindchange="radioChange">
        <label class="radio" wx:for="{{items}}">
          <radio value="{{item.value}}" checked="{{item.checked}}" />{{item.name}}
        </label>
      </radio-group>
    </view>
    <view class="carExplain">
      <view class="carExplain-left">
        <text class="carExplain-left-top">{{carExplainTop}}</text>
        <text class="carExplain-left-bottom">{{carExplainBottom}}</text>
      </view>
      <button class="btn" bindtap="openCarExplain"> 车型说明 </button>
    </view>
    <view class="row-wrap">
      <picker bindchange="bindCasPickerChange" value="{{casIndex1}}" range="{{casArray}}">
        <view>
          <text>{{casArray[casIndex]}}</text>
        </view>
      </picker>
    </view>

    <ul>
      <li>
        <view>
          <icon type='info'></icon>
          <text>起始地</text>
        </view>

        <view class="mapSeach">
          <view class="section">
            <input bindinput="bindInput" placeholder="搜索" focus="true" data-address='sd' value='{{addressValue=="sd"?keywords:""}}' />
          </view>
          <view bindtouchstart="bindSearch" data-keywords="{{i.name}}" data-location='{{i.location}}' style='display:{{displayValue}}' class="text_box" wx:for="{{tips}}" wx:for-item="i" wx:if="{{addressValue=='sd'}}">
            {{i.name}}
          </view>
        </view>

        <view class="row-wrap">
          <picker bindchange="bindCasPickerChange" value="{{casIndex1}}" range="{{casArray}}">
            <view>
              <text>{{casArray[casIndex]}}</text>
            </view>
          </picker>
        </view>
      </li>
      <li>
        <view>
          <icon type='info'></icon>
          <text>目的地</text>
        </view>


        <view class="mapSeach">
          <view class="section">
            <input bindinput="bindInput" placeholder="搜索" focus="true" data-address='ed' value='{{addressValue=="ed"?keywords:""}}' />
          </view>
          <view bindtouchstart="bindSearch" data-keywords="{{i.name}}" data-location='{{i.location}}' style='display:{{displayValue}}' class="text_box" wx:for="{{tips}}" wx:for-item="i" wx:if="{{addressValue=='ed'}}">
            {{i.name}}
          </view>
        </view>

        <view class="row-wrap">
          <picker bindchange="bindCasPickerChange" value="{{casIndex1}}" range="{{casArray}}">
            <view>
              <text>{{casArray[casIndex]}}</text>
            </view>
          </picker>
        </view>
      </li>
    </ul>

    <view class="passingPlace">
      <block wx:for="{{passingPlaceLists}}" wx:for-item="item" wx:key="id">
        <view>
          <icon type='info'></icon>
          <text>途经点</text>
        </view>

        <view class="mapSeach">
          <view class="section">
            <input bindinput="bindInput" placeholder="搜索" focus="true" data-address="{{index}}" value='{{addressValue==item.id?keywords:""}}'></input>
          </view>
          <view bindtouchstart="bindSearch" data-keywords="{{i.name}}" data-location='{{i.location}}' style='display:{{displayValue}}' class="text_box" wx:for="{{tips}}" wx:for-item="i" wx:if="{{addressValue==item.id}}" data-index="{{index}}">
            {{i.name}}
          </view>
        </view>

        <view class="row-wrap">
          <picker bindchange="bindCasPickerChange" value="{{casIndex1}}" range="{{casArray}}">
            <view>
              <text>{{casArray[casIndex]}}</text>
            </view>
          </picker>
        </view>

        <icon type='cancel' bindtap='delPassingPlace' data-index="{{index}}"></icon>
      </block>
    </view>
    <button bindtap='addPassingPlace'>
      <icon type='info'></icon>
      还有途径点~
    </button>

    <view class="movingTime">
      <view class="moveTimeTitle">
        <icon type='info'></icon>
        <text>搬家时间</text>
      </view>

      <view>
        <!-- <view>{{item.month}}月{{item.day}}日 {{hour}}:{{minute}}</view> -->
        <view>服务时间</view>
        <picker-view indicator-style="height: 50px;" style="width: 100%; height: 300px;" value="{{value}}" bindchange="bindChange">
          <picker-view-column>
            <view wx:for="{{days}}" style="line-height: 50px">{{item.month}}月{{item.day}}日</view>
          </picker-view-column>
          <picker-view-column>
            <view wx:for="{{hours}}" style="line-height: 50px">{{item}}</view>
          </picker-view-column>
          <picker-view-column>
            <view wx:for="{{minutes}}" style="line-height: 50px">{{item}}</view>
          </picker-view-column>
        </picker-view>
      </view>
    </view>

    <view class="contacts">
      <view class="contactsTitle">
        <icon type='info'></icon>
        <text>联系人</text>
        <input bindinput="bindInput" focus="true" value='{{userInfo.nickName}}' />
      </view>
    </view>



