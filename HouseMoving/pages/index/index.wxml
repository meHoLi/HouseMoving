<!--index.wxml-->
<view class="container">
  <view class="tabs">
    <radio-group class="radio-group" bindchange="radioChange">
      <label class="radio" wx:for="{{items}}">
        <radio value="{{item.value}}" checked="{{item.checked}}" />{{item.name}}
      </label>
    </radio-group>
  </view>
  <view class="carExplain">
    <view class="carExplain-left">
      <text class="carExplain-left-top">{{carExplainTop}}</text>
      <text class="carExplain-left-bottom">{{carExplainBottom}}</text>
    </view>
    <button class="btn" bindtap="openCarExplain"> 车型说明 </button>
  </view>
  <view class="row-wrap">
    <picker bindchange="bindCasPickerChange" value="{{casIndex1}}" range="{{casArray}}">
      <view>
        <text>{{casArray[casIndex]}}</text>
      </view>
    </picker>
  </view>

  <ul>
    <li>
      <view>
        <icon type='info'></icon>
        <text>起始地</text>
      </view>

      <view class="mapSeach">
        <view class="section">
          <input bindinput="bindInput" placeholder="搜索" focus="true" value='{{keywords}}' />
        </view>
        <view bindtouchstart="bindSearch" data-keywords="{{i.name}}" data-location='{{i.location}}' style='display:{{displayValue}}' class="text_box" wx:for="{{tips}}" wx:for-item="i">
          {{i.name}}
        </view>
      </view>

      <view class="row-wrap">
        <picker bindchange="bindCasPickerChange" value="{{casIndex1}}" range="{{casArray}}">
          <view>
            <text>{{casArray[casIndex]}}</text>
          </view>
        </picker>
      </view>
    </li>
    <li>
      <view>
        <icon type='info'></icon>
        <text>目的地</text>
      </view>

      <view class="mapSeach">
        <view class="section">
          <input bindinput="bindInput" placeholder="搜索" focus="true" value='{{keywords}}' />
        </view>
        <view bindtouchstart="bindSearch" data-keywords="{{i.name}}"  data-location='{{i.location}}' style='display:{{displayValue}}' class="text_box" wx:for="{{tips}}" wx:for-item="i">
          {{i.name}}
        </view>
      </view>

      <view class="row-wrap">
        <picker bindchange="bindCasPickerChange" value="{{casIndex1}}" range="{{casArray}}">
          <view>
            <text>{{casArray[casIndex]}}</text>
          </view>
        </picker>
      </view>
    </li>
  </ul>

  <view class="passingPlace">
    <block wx:for="{{passingPlaceLists}}" wx:key="id">
      <view>
        <icon type='info'></icon>
        <text>途经点</text>
      </view>

      <view class="mapSeach">
        <view class="section">
          <input bindinput="bindInput" placeholder="搜索" focus="true" value='{{keywords}}' />
        </view>
        <view bindtouchstart="bindSearch" data-keywords="{{i.name}}"  data-location='{{i.location}}' style='display:{{displayValue}}' class="text_box" wx:for="{{tips}}" wx:for-item="i">
          {{i.name}}
        </view>
      </view>

      <view class="row-wrap">
        <picker bindchange="bindCasPickerChange" value="{{casIndex1}}" range="{{casArray}}">
          <view>
            <text>{{casArray[casIndex]}}</text>
          </view>
        </picker>
      </view>

      <icon type='cancel' bindtap='delPassingPlace' data-index="{{index}}"></icon>
    </block>
  </view>
  <button bindtap='addPassingPlace'>
    <icon type='info'></icon>还有途径点~</button>
