/* pages/main/main.wxss */
.info-cont {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.head{
  font-size: 46rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 40rpx 0; 
  background: #c0e0ff;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 0 20rpx;
  border-radius: 50%;
}

.infoMain {
  /* display: none; */
  width: 100%;
  margin: 0 auto;
}

.item {
  position: relative;
  border-bottom: 2rpx solid #eee;
  height: 80rpx;
  line-height: 80rpx;
  overflow: hidden;
  margin-left: 20rpx; 
}

.inner.txt {
  background-color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.item-text{
  display: flex;
  flex: 1;
}
.item-edit{
  width: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.item-edit image{
  width: 40rpx;
}
